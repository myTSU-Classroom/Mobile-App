<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginRegisterActivity">

    <androidx.cardview.widget.CardView
        android:id="@+id/tsu_container"
        android:layout_width="238dp"
        android:layout_height="201dp"
        android:layout_margin="10dp"
        app:cardCornerRadius="30dp"
        app:cardElevation="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="61dp"
        android:layout_marginEnd="61dp"
        app:layout_constraintTop_toTopOf="parent"
        android:translationY="-66dp"
        >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            android:src="@drawable/tsu" />

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tv_myTsuClassroom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat_bold"
        android:text="MyTsu Classroom"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="103dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="62dp"
        android:textColor="@color/black"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="167dp"/>

    <ImageView
        android:id="@+id/ic_books"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_books"
        app:layout_constraintEnd_toStartOf="@id/tv_myTsuClassroom"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="167dp"
        android:layout_marginEnd="7dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_login"
        android:text="Log in"
        android:textSize="16sp"
        android:fontFamily="@font/montserrat_bold"
        app:layout_constraintTop_toBottomOf="@id/tv_myTsuClassroom"
        android:layout_marginTop="25dp"
        android:lineSpacingExtra="-7sp"
        android:textColor="@color/greyText"
        app:layout_constraintEnd_toStartOf="@id/ic_line"
        android:layout_marginEnd="24dp"
        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ic_line"
        app:layout_constraintTop_toBottomOf="@id/tv_myTsuClassroom"
        android:src="@drawable/ic_line"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="30dp"
        android:layout_marginStart="170dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="170dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_register"
        android:text="Register"
        android:textSize="16sp"
        android:fontFamily="@font/montserrat_bold"
        app:layout_constraintTop_toBottomOf="@id/tv_myTsuClassroom"
        android:layout_marginTop="25dp"
        android:textColor="@color/greyText"
        app:layout_constraintStart_toEndOf="@id/ic_line"
        android:layout_marginStart="24dp"/>






</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingVertical="8dp">

    <TextView
        android:id="@+id/tv_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat_900"
        android:text="Log in"
        android:textColor="@color/greyPlaceholder"
        android:textSize="16sp"
        app:layout_constraintEnd_toStartOf="@id/ic_line"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/ic_line"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_line"
        app:layout_constraintBottom_toBottomOf="@id/tv_login"
        app:layout_constraintEnd_toStartOf="@id/tv_register"
        app:layout_constraintStart_toEndOf="@id/tv_login"
        app:layout_constraintTop_toTopOf="@id/tv_login" />

    <TextView
        android:id="@+id/tv_register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat_900"
        android:text="Register"
        android:textColor="@color/greyPlaceholder"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@id/tv_login"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/ic_line"
        app:layout_constraintTop_toTopOf="@id/tv_login" />
</androidx.constraintlayout.widget.ConstraintLayout>
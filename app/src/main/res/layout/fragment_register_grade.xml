<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingHorizontal="20dp"
    android:paddingBottom="46dp"
    tools:context=".view.register.RegisterGradeFragment">

    <TextView
        android:id="@+id/tv_enter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat_700"
        android:text="Complete Your Details"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tv_need"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="23dp"
        android:fontFamily="@font/montserrat_500"
        android:text="Specifiy your details."
        android:textColor="@color/greyDark"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_enter" />

    <TextView
        android:id="@+id/tv_grade"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="23dp"
        android:fontFamily="@font/montserrat_500"
        android:text="Grade"
        android:textColor="@color/greyText"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_need" />

    <RadioButton
        android:id="@+id/rb_1"
        android:layout_width="21dp"
        android:layout_height="21dp"
        android:layout_marginStart="32dp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_grade"
        app:layout_constraintStart_toEndOf="@+id/tv_grade"
        app:layout_constraintTop_toTopOf="@+id/tv_grade" />

    <TextView
        android:id="@+id/tv_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat_500"
        android:text="1"
        android:layout_marginStart="10dp"
        android:textColor="@color/greyText"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/rb_1"
        app:layout_constraintStart_toEndOf="@+id/rb_1"
        app:layout_constraintTop_toTopOf="@+id/rb_1" />

    <RadioButton
        android:id="@+id/rb_2"
        android:layout_width="21dp"
        android:layout_height="21dp"
        android:layout_marginStart="32dp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_1"
        app:layout_constraintStart_toEndOf="@+id/tv_1"
        app:layout_constraintTop_toTopOf="@+id/tv_1" />

    <TextView
        android:id="@+id/tv_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat_500"
        android:text="2"
        android:layout_marginStart="10dp"
        android:textColor="@color/greyText"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/rb_2"
        app:layout_constraintStart_toEndOf="@+id/rb_2"
        app:layout_constraintTop_toTopOf="@+id/rb_2" />

    <RadioButton
        android:id="@+id/rb_3"
        android:layout_width="21dp"
        android:layout_height="21dp"
        android:layout_marginStart="32dp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_2"
        app:layout_constraintStart_toEndOf="@+id/tv_2"
        app:layout_constraintTop_toTopOf="@+id/tv_2" />

    <TextView
        android:id="@+id/tv_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat_500"
        android:text="3"
        android:layout_marginStart="10dp"
        android:textColor="@color/greyText"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/rb_3"
        app:layout_constraintStart_toEndOf="@+id/rb_3"
        app:layout_constraintTop_toTopOf="@+id/rb_3" />

    <RadioButton
        android:id="@+id/rb_4"
        android:layout_width="21dp"
        android:layout_height="21dp"
        android:layout_marginStart="32dp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_3"
        app:layout_constraintStart_toEndOf="@+id/tv_3"
        app:layout_constraintTop_toTopOf="@+id/tv_3" />

    <TextView
        android:id="@+id/tv_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat_500"
        android:text="4"
        android:layout_marginStart="10dp"
        android:textColor="@color/greyText"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/rb_4"
        app:layout_constraintStart_toEndOf="@+id/rb_4"
        app:layout_constraintTop_toTopOf="@+id/rb_4" />
    
    <Spinner
        android:id="@+id/s_faculty"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/custom_text"
        android:paddingStart="20dp"
        android:paddingTop="10dp"
        android:paddingEnd="20dp"
        android:paddingBottom="10dp"
        android:hint="Faculty"
        android:textColor="@color/black"
        android:textColorHint="@color/greyText"
        android:textIsSelectable="false"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_grade"
        />

    <Spinner
        android:id="@+id/s_discipline"
        android:layout_width="230dp"
        android:layout_height="44dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/custom_text"
        android:fontFamily="@font/montserrat_500"
        android:hint="Discipline"
        android:paddingStart="20dp"
        android:paddingTop="10dp"
        android:paddingEnd="20dp"
        android:paddingBottom="10dp"
        android:textColor="@color/black"
        android:textColorHint="@color/greyPlaceholder"
        android:textIsSelectable="false"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/s_faculty" />

    <Spinner
        android:id="@+id/s_group"
        android:layout_width="126dp"
        android:layout_height="44dp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="9dp"
        android:background="@drawable/custom_text"
        android:fontFamily="@font/montserrat_500"
        android:hint="Discipline"
        android:paddingStart="20dp"
        android:paddingTop="10dp"
        android:paddingEnd="20dp"
        android:paddingBottom="10dp"
        android:textColor="@color/black"
        android:textColorHint="@color/greyText"
        android:textIsSelectable="false"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/s_faculty" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/btn_next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_bias="1">

        <TextView
            android:id="@+id/tv_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:fontFamily="@font/montserrat_500"
            android:text="Next"
            android:textColor="@color/blueButton"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/iv_arrow_next"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1" />

        <ImageView
            android:id="@+id/iv_arrow_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_arrow"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/btn_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintVertical_bias="1">

        <TextView
            android:id="@+id/tv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:fontFamily="@font/montserrat_500"
            android:text="Back"
            android:textColor="@color/blueButton"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/iv_arrow_back"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/iv_arrow_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleX="-1"
            android:src="@drawable/ic_arrow"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
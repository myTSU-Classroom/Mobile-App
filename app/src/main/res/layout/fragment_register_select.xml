<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".RegisterSelectFragment">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:id="@+id/tv_enter"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:fontFamily="@font/montserrat_bold"
        android:text="Select Your Role"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tv_need"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="20dp"
        android:layout_marginTop="23dp"
        android:layout_marginEnd="20dp"
        android:fontFamily="@font/montserrat_medium"
        android:text="Let us know your role."
        android:textColor="@color/greyDark"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_enter" />

    <ImageView
        android:id="@+id/iv_teacher"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="92dp"
        android:layout_marginTop="21dp"
        android:src="@drawable/teacher_white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_need" />

    <TextView
        android:id="@+id/tv_teacher"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="13dp"
        android:fontFamily="@font/montserrat_medium"
        android:text="Teacher"
        android:textColor="@color/greyText"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="@+id/iv_teacher"
        app:layout_constraintStart_toStartOf="@+id/iv_teacher"
        app:layout_constraintTop_toBottomOf="@+id/iv_teacher" />

    <ImageView
        android:id="@+id/iv_student"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="21dp"
        android:layout_marginEnd="92dp"
        android:src="@drawable/student_white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_need" />

    <TextView
        android:id="@+id/tv_student"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="13dp"
        android:fontFamily="@font/montserrat_medium"
        android:text="Student"
        android:textColor="@color/greyText"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="@+id/iv_student"
        app:layout_constraintStart_toStartOf="@+id/iv_student"
        app:layout_constraintTop_toBottomOf="@+id/iv_student" />

    <TextView
        android:id="@+id/tv_next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="51dp"
        android:layout_marginEnd="47dp"
        android:layout_marginBottom="46dp"
        android:fontFamily="@font/montserrat_medium"
        android:text="Next"
        android:textColor="@color/blueButton"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_student" />

    <ImageView
        android:id="@+id/iv_arrow_next"
        android:layout_width="13dp"
        android:layout_height="17dp"
        android:layout_marginStart="10dp"
        android:src="@drawable/baseline_arrow_forward_24"
        app:layout_constraintBottom_toBottomOf="@+id/tv_next"
        app:layout_constraintStart_toEndOf="@+id/tv_next"
        app:layout_constraintTop_toTopOf="@+id/tv_next" />

    <TextView
        android:id="@+id/tv_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="47dp"
        android:layout_marginTop="51dp"
        android:layout_marginBottom="46dp"
        android:fontFamily="@font/montserrat_medium"
        android:text="Back"
        android:textColor="@color/blueButton"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_teacher" />

    <ImageView
        android:id="@+id/iv_arrow_back"
        android:layout_width="13dp"
        android:layout_height="17dp"
        android:layout_marginEnd="10dp"
        android:src="@drawable/baseline_arrow_back_24"
        app:layout_constraintBottom_toBottomOf="@+id/tv_back"
        app:layout_constraintEnd_toStartOf="@+id/tv_back"
        app:layout_constraintTop_toTopOf="@+id/tv_back" />


</androidx.constraintlayout.widget.ConstraintLayout>
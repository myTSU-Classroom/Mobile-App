<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <TextView
        android:id="@+id/tv_autumn"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:text="Autumn"
        android:textSize="16sp"
        android:textColor="@color/gray"
        android:fontFamily="@font/montserrat_900"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="15dp"
        android:layout_marginStart="22dp"
        />

    <ImageView
        android:id="@+id/iv_blue_line_autumn"
        android:layout_width="71dp"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_blue_line_small"
        app:layout_constraintTop_toBottomOf="@id/tv_autumn"
        android:layout_marginTop="5dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="22dp"
        />

    <ImageView
        android:id="@+id/ic_circle"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/ic_circle_gray"
        app:layout_constraintStart_toEndOf="@id/tv_autumn"
        android:layout_marginStart="15dp"
        app:layout_constraintTop_toTopOf="@id/tv_autumn"
        android:layout_marginTop="3dp"
        app:tint="@color/greyContainer" />

    <TextView
        android:id="@+id/tv_spring"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:text="Spring"
        android:textSize="16sp"
        android:textColor="@color/greyContainer"
        android:fontFamily="@font/montserrat_900"
        app:layout_constraintStart_toEndOf="@id/ic_circle"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="15dp"
        android:layout_marginStart="15dp"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/iv_blue_line_autumn"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="30dp"
        tools:listitem="@layout/items_student_autumn"
        tools:itemCount="1"
        android:layout_marginTop="47dp"
        />







</androidx.constraintlayout.widget.ConstraintLayout>
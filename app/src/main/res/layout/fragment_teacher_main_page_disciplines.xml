<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".TeacherMainPageDisciplines">

    <TextView
        android:id="@+id/tv_administration"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:text="My Disciplines"
        android:textSize="16sp"
        android:textColor="@color/gray"
        android:fontFamily="@font/montserrat_900"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="20dp"
        />
    <ImageView
        android:id="@+id/line"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:src="@drawable/ic_blue_line"
        app:layout_constraintTop_toBottomOf="@id/tv_administration"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="16dp"/>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/line"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="30dp"
        tools:listitem="@layout/items_student_autumn"
        tools:itemCount="1"
        android:layout_marginTop="47dp"
        />



</androidx.constraintlayout.widget.ConstraintLayout>
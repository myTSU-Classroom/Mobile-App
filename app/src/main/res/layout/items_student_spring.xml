<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/tv_cybersecurity"
        android:layout_width="235dp"
        android:layout_height="0dp"
        android:text="Introduction to Cybersecurity"
        android:textSize="12sp"
        android:textColor="@color/gray"
        android:fontFamily="@font/montserrat_700"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_vector_up"
        app:layout_constraintStart_toEndOf="@id/tv_cybersecurity"
        android:layout_marginStart="47dp"
        app:layout_constraintTop_toTopOf="@id/tv_cybersecurity"
        app:layout_constraintBottom_toBottomOf="@id/tv_cybersecurity"
        android:scaleY="-1"/>

    <TextView
        android:id="@+id/tv_quality_assurance"
        android:layout_width="235dp"
        android:layout_height="0dp"
        android:text="Quality Assurance"
        android:textSize="12sp"
        android:textColor="@color/gray"
        android:fontFamily="@font/montserrat_700"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_cybersecurity"
        android:layout_marginTop="33dp"
        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_vector_up"
        app:layout_constraintStart_toEndOf="@id/tv_quality_assurance"
        android:layout_marginStart="47dp"
        app:layout_constraintTop_toTopOf="@id/tv_quality_assurance"
        app:layout_constraintBottom_toBottomOf="@id/tv_quality_assurance"
        android:scaleY="-1"/>

    <TextView
        android:id="@+id/tv_behavioral_finance"
        android:layout_width="235dp"
        android:layout_height="0dp"
        android:text="Behavioral Finance"
        android:textSize="12sp"
        android:textColor="@color/gray"
        android:fontFamily="@font/montserrat_700"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_quality_assurance"
        android:layout_marginTop="33dp"
        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_vector_up"
        app:layout_constraintStart_toEndOf="@id/tv_behavioral_finance"
        android:layout_marginStart="47dp"
        app:layout_constraintTop_toTopOf="@id/tv_behavioral_finance"
        app:layout_constraintBottom_toBottomOf="@id/tv_behavioral_finance"
        android:scaleY="-1"/>

    <TextView
        android:id="@+id/tv_life_safety"
        android:layout_width="235dp"
        android:layout_height="0dp"
        android:text="Life Safety"
        android:textSize="12sp"
        android:textColor="@color/gray"
        android:fontFamily="@font/montserrat_700"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_behavioral_finance"
        android:layout_marginTop="33dp"
        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_vector_up"
        app:layout_constraintStart_toEndOf="@id/tv_life_safety"
        android:layout_marginStart="47dp"
        app:layout_constraintTop_toTopOf="@id/tv_life_safety"
        app:layout_constraintBottom_toBottomOf="@id/tv_life_safety"
        android:scaleY="-1"/>

    <TextView
        android:id="@+id/tv_english"
        android:layout_width="235dp"
        android:layout_height="0dp"
        android:text="English for Professional"
        android:textSize="12sp"
        android:textColor="@color/gray"
        android:fontFamily="@font/montserrat_700"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_life_safety"
        android:layout_marginTop="33dp"
        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_vector_up"
        app:layout_constraintStart_toEndOf="@id/tv_english"
        android:layout_marginStart="47dp"
        app:layout_constraintTop_toTopOf="@id/tv_english"
        app:layout_constraintBottom_toBottomOf="@id/tv_english"
        android:scaleY="-1"/>



</androidx.constraintlayout.widget.ConstraintLayout>
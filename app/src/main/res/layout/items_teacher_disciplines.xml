<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/tv_sdp"
        android:layout_width="235dp"
        android:layout_height="0dp"
        android:text="Software Development Process"
        android:textSize="12sp"
        android:textColor="@color/gray"
        android:fontFamily="@font/montserrat_700"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/blue_background"
        android:layout_width="300dp"
        android:layout_height="698dp"
        android:src="@drawable/custom_student_container"
        app:layout_constraintTop_toBottomOf="@id/tv_sdp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="16dp"
        />

    <TextView
        android:id="@+id/tv_description"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:text="Description"
        android:textSize="12sp"
        android:textColor="@color/gray"
        android:fontFamily="@font/montserrat_700"
        app:layout_constraintStart_toStartOf="@id/tv_sdp"
        app:layout_constraintTop_toTopOf="@id/blue_background"
        android:layout_marginStart="25dp"
        android:layout_marginTop="25dp"
        />

    <ImageView
        android:id="@+id/text_format_bar"
        android:layout_width="0dp"
        android:layout_height="49dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="28dp"
        android:src="@drawable/description_container"
        app:layout_constraintEnd_toEndOf="@id/blue_background"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_description" />

    <ImageView
        android:id="@+id/iv_bold"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="18dp"
        android:src="@drawable/ic_bold"
        app:layout_constraintStart_toStartOf="@id/text_format_bar"
        app:layout_constraintTop_toTopOf="@id/text_format_bar" />

    <ImageView
        android:id="@+id/iv_italic"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="14dp"
        android:layout_marginTop="18dp"
        android:src="@drawable/ic_italic"
        app:layout_constraintStart_toEndOf="@id/iv_bold"
        app:layout_constraintTop_toTopOf="@id/text_format_bar" />

    <ImageView
        android:id="@+id/iv_underline"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="14dp"
        android:layout_marginTop="18dp"
        android:src="@drawable/ic_underline"
        app:layout_constraintStart_toEndOf="@id/iv_italic"
        app:layout_constraintTop_toTopOf="@id/text_format_bar" />

    <ImageView
        android:id="@+id/iv_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="21dp"
        android:layout_marginTop="18dp"
        android:src="@drawable/ic_text"
        app:layout_constraintStart_toEndOf="@id/iv_underline"
        app:layout_constraintTop_toTopOf="@id/text_format_bar" />

    <ImageView
        android:id="@+id/iv_text_right"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="14dp"
        android:layout_marginTop="18dp"
        android:src="@drawable/ic_text_right"
        app:layout_constraintStart_toEndOf="@id/iv_text"
        app:layout_constraintTop_toTopOf="@id/text_format_bar" />

    <ImageView
        android:id="@+id/iv_text_center"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="14dp"
        android:layout_marginTop="18dp"
        android:src="@drawable/ic_text_center"
        app:layout_constraintStart_toEndOf="@id/iv_text_right"
        app:layout_constraintTop_toTopOf="@id/text_format_bar" />

    <ImageView
        android:id="@+id/iv_list"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="21dp"
        android:layout_marginTop="18dp"
        android:src="@drawable/ic_list"
        app:layout_constraintStart_toEndOf="@id/iv_text_center"
        app:layout_constraintTop_toTopOf="@id/text_format_bar" />

    <ImageView
        android:id="@+id/iv_list_num"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="14dp"
        android:layout_marginTop="18dp"
        android:src="@drawable/ic_num_list"
        app:layout_constraintStart_toEndOf="@id/iv_list"
        app:layout_constraintTop_toTopOf="@id/text_format_bar" />

    <EditText
        android:id="@+id/et_description"
        android:layout_width="0dp"
        android:layout_height="128dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="28dp"
        android:background="@drawable/description_container_reverse"
        android:fontFamily="@font/montserrat_500"
        android:hint="Software development process is a \n process of planning and managing \n software development."
        android:paddingStart="10dp"
        android:textColorHint="@color/greyContainer"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="@id/blue_background"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_format_bar" />

    <TextView
        android:id="@+id/tv_readings_and_literature"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:text="Readings and Literature"
        android:textSize="12sp"
        android:textColor="@color/gray"
        android:fontFamily="@font/montserrat_700"
        app:layout_constraintStart_toStartOf="@id/tv_sdp"
        app:layout_constraintTop_toBottomOf="@id/et_description"
        android:layout_marginStart="25dp"
        android:layout_marginTop="16dp"
        />

    <ImageView
        android:id="@+id/text_format_bar_readings_and_literature"
        android:layout_width="0dp"
        android:layout_height="49dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="28dp"
        android:src="@drawable/description_container"
        app:layout_constraintEnd_toEndOf="@id/blue_background"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_readings_and_literature" />

    <EditText
        android:id="@+id/et_readings_and_literature"
        android:layout_width="0dp"
        android:layout_height="128dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="28dp"
        android:background="@drawable/description_container_reverse"
        android:fontFamily="@font/montserrat_500"
        android:hint="Software Development Process Book.pdf"
        android:paddingStart="10dp"
        android:textColorHint="@color/greyContainer"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="@id/blue_background"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_format_bar_readings_and_literature" />

    <ImageView
        android:id="@+id/iv_bold_2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="18dp"
        android:src="@drawable/ic_bold"
        app:layout_constraintStart_toStartOf="@id/et_readings_and_literature"
        app:layout_constraintTop_toTopOf="@id/text_format_bar_readings_and_literature" />

    <ImageView
        android:id="@+id/iv_italic_2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="14dp"
        android:layout_marginTop="18dp"
        android:src="@drawable/ic_italic"
        app:layout_constraintStart_toEndOf="@id/iv_bold_2"
        app:layout_constraintTop_toTopOf="@id/text_format_bar_readings_and_literature" />

    <ImageView
        android:id="@+id/iv_underline_2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="14dp"
        android:layout_marginTop="18dp"
        android:src="@drawable/ic_underline"
        app:layout_constraintStart_toEndOf="@id/iv_italic_2"
        app:layout_constraintTop_toTopOf="@id/text_format_bar_readings_and_literature" />

    <ImageView
        android:id="@+id/iv_text_2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="21dp"
        android:layout_marginTop="18dp"
        android:src="@drawable/ic_text"
        app:layout_constraintStart_toEndOf="@id/iv_underline_2"
        app:layout_constraintTop_toTopOf="@id/text_format_bar_readings_and_literature" />

    <ImageView
        android:id="@+id/iv_text_right_2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="14dp"
        android:layout_marginTop="18dp"
        android:src="@drawable/ic_text_right"
        app:layout_constraintStart_toEndOf="@id/iv_text_2"
        app:layout_constraintTop_toTopOf="@id/text_format_bar_readings_and_literature" />

    <ImageView
        android:id="@+id/iv_text_center_2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="14dp"
        android:layout_marginTop="18dp"
        android:src="@drawable/ic_text_center"
        app:layout_constraintStart_toEndOf="@id/iv_text_right_2"
        app:layout_constraintTop_toTopOf="@id/text_format_bar_readings_and_literature" />

    <ImageView
        android:id="@+id/iv_list_2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="21dp"
        android:layout_marginTop="18dp"
        android:src="@drawable/ic_list"
        app:layout_constraintStart_toEndOf="@id/iv_text_center_2"
        app:layout_constraintTop_toTopOf="@id/text_format_bar_readings_and_literature" />

    <ImageView
        android:id="@+id/iv_list_num_2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="14dp"
        android:layout_marginTop="18dp"
        android:src="@drawable/ic_num_list"
        app:layout_constraintStart_toEndOf="@id/iv_list_2"
        app:layout_constraintTop_toTopOf="@id/text_format_bar_readings_and_literature" />

    <TextView
        android:id="@+id/tv_teacher"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:text="Teacher"
        android:textSize="12sp"
        android:textColor="@color/gray"
        android:fontFamily="@font/montserrat_700"
        app:layout_constraintStart_toStartOf="@id/tv_sdp"
        app:layout_constraintTop_toBottomOf="@id/et_readings_and_literature"
        android:layout_marginStart="25dp"
        android:layout_marginTop="16dp"
        />

    <TextView
        android:id="@+id/tv_teacher_name"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/montserrat_500"
        android:text="Rafi Hayla"
        android:textAlignment="textStart"
        android:textColor="@color/gray"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@id/tv_sdp"
        app:layout_constraintTop_toBottomOf="@id/tv_teacher" />

    <TextView
        android:id="@+id/tv_year"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:text="Year"
        android:textSize="12sp"
        android:textColor="@color/gray"
        android:fontFamily="@font/montserrat_700"
        app:layout_constraintStart_toStartOf="@id/tv_teacher"
        app:layout_constraintTop_toBottomOf="@id/et_readings_and_literature"
        android:layout_marginStart="180dp"
        android:layout_marginTop="16dp"
        />

    <TextView
        android:id="@+id/tv_year_number"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginStart="180dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/montserrat_500"
        android:text="2020-2021"
        android:textAlignment="textStart"
        android:textColor="@color/gray"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@id/tv_teacher_name"
        app:layout_constraintTop_toBottomOf="@id/tv_teacher" />

    <TextView
        android:id="@+id/tv_grade"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:text="Grade"
        android:textSize="12sp"
        android:textColor="@color/gray"
        android:fontFamily="@font/montserrat_700"
        app:layout_constraintStart_toStartOf="@id/tv_sdp"
        app:layout_constraintTop_toBottomOf="@id/tv_teacher_name"
        android:layout_marginStart="25dp"
        android:layout_marginTop="16dp"
        />

    <TextView
        android:id="@+id/tv_schedule"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:text="Schedule"
        android:textSize="12sp"
        android:textColor="@color/gray"
        android:fontFamily="@font/montserrat_700"
        app:layout_constraintStart_toStartOf="@id/tv_sdp"
        app:layout_constraintTop_toBottomOf="@id/tv_grade_number"
        android:layout_marginStart="25dp"
        android:layout_marginTop="16dp"
        />

    <TextView
        android:id="@+id/tv_schedule_info"
        android:layout_width="0dp"
        android:layout_height="13dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/montserrat_500"
        android:text="Offline Class"
        android:textAlignment="textStart"
        android:textColor="@color/gray"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@id/tv_sdp"
        app:layout_constraintTop_toBottomOf="@id/tv_schedule" />

    <TextView
        android:id="@+id/tv_period"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:text="Period"
        android:textSize="12sp"
        android:textColor="@color/gray"
        android:fontFamily="@font/montserrat_700"
        app:layout_constraintStart_toStartOf="@id/tv_grade"
        app:layout_constraintTop_toBottomOf="@id/tv_year_number"
        android:layout_marginStart="180dp"
        android:layout_marginTop="16dp"
        />

    <TextView
        android:id="@+id/tv_period_info"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginStart="180dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/montserrat_500"
        android:text="Autumn"
        android:textAlignment="textStart"
        android:textColor="@color/gray"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@id/tv_teacher_name"
        app:layout_constraintTop_toBottomOf="@id/tv_period" />

    <TextView
        android:id="@+id/tv_building"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:text="Building"
        android:textSize="12sp"
        android:textColor="@color/gray"
        android:fontFamily="@font/montserrat_700"
        app:layout_constraintStart_toStartOf="@id/tv_period"
        app:layout_constraintTop_toBottomOf="@id/tv_period_info"
        android:layout_marginTop="16dp"
        />

    <TextView
        android:id="@+id/tv_grade_number"
        android:layout_width="7dp"
        android:layout_height="13dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/montserrat_500"
        android:text="4"
        android:textAlignment="textStart"
        android:textColor="@color/gray"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@id/tv_sdp"
        app:layout_constraintTop_toBottomOf="@id/tv_grade" />

    <TextView
        android:id="@+id/tv_building_number"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/montserrat_500"
        android:text="2"
        android:textAlignment="textStart"
        android:textColor="@color/gray"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@id/tv_period"
        app:layout_constraintTop_toBottomOf="@id/tv_building" />

    <TextView
        android:id="@+id/tv_room"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:text="Room"
        android:textSize="12sp"
        android:textColor="@color/gray"
        android:fontFamily="@font/montserrat_700"
        app:layout_constraintStart_toStartOf="@id/tv_grade"
        app:layout_constraintTop_toBottomOf="@id/tv_schedule_info"
        android:layout_marginTop="16dp"
        />

    <TextView
        android:id="@+id/tv_room_info"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/montserrat_500"
        android:text="218"
        android:textAlignment="textStart"
        android:textColor="@color/gray"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@id/tv_teacher_name"
        app:layout_constraintTop_toBottomOf="@id/tv_room" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_vector_up"
        app:layout_constraintStart_toEndOf="@id/tv_sdp"
        android:layout_marginStart="47dp"
        app:layout_constraintTop_toTopOf="@id/tv_sdp"
        app:layout_constraintBottom_toBottomOf="@id/tv_sdp"/>

    <TextView
        android:id="@+id/tv_frontend"
        android:layout_width="235dp"
        android:layout_height="0dp"
        android:text="Front-end Development"
        android:textSize="12sp"
        android:textColor="@color/gray"
        android:fontFamily="@font/montserrat_700"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/blue_background"
        android:layout_marginTop="33dp"
        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_vector_up"
        app:layout_constraintStart_toEndOf="@id/tv_frontend"
        android:layout_marginStart="47dp"
        app:layout_constraintTop_toTopOf="@id/tv_frontend"
        app:layout_constraintBottom_toBottomOf="@id/tv_frontend"
        android:scaleY="-1"/>

    <TextView
        android:id="@+id/tv_backend"
        android:layout_width="235dp"
        android:layout_height="0dp"
        android:text="Back-end Development"
        android:textSize="12sp"
        android:textColor="@color/gray"
        android:fontFamily="@font/montserrat_700"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_russian_language"
        android:layout_marginTop="33dp"
        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_vector_up"
        app:layout_constraintStart_toEndOf="@id/tv_backend"
        android:layout_marginStart="47dp"
        app:layout_constraintTop_toTopOf="@id/tv_backend"
        app:layout_constraintBottom_toBottomOf="@id/tv_backend"
        android:scaleY="-1"/>

    <TextView
        android:id="@+id/tv_russian_language"
        android:layout_width="235dp"
        android:layout_height="0dp"
        android:text="Russian Language"
        android:textSize="12sp"
        android:textColor="@color/gray"
        android:fontFamily="@font/montserrat_700"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_frontend"
        android:layout_marginTop="33dp"
        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_vector_up"
        app:layout_constraintStart_toEndOf="@id/tv_russian_language"
        android:layout_marginStart="47dp"
        app:layout_constraintTop_toTopOf="@id/tv_russian_language"
        app:layout_constraintBottom_toBottomOf="@id/tv_russian_language"
        android:scaleY="-1"/>

    <TextView
        android:id="@+id/tv_law"
        android:layout_width="235dp"
        android:layout_height="0dp"
        android:text="Law"
        android:textSize="12sp"
        android:textColor="@color/gray"
        android:fontFamily="@font/montserrat_700"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_backend"
        android:layout_marginTop="33dp"
        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_vector_up"
        app:layout_constraintStart_toEndOf="@id/tv_law"
        android:layout_marginStart="47dp"
        app:layout_constraintTop_toTopOf="@id/tv_law"
        app:layout_constraintBottom_toBottomOf="@id/tv_law"
        android:scaleY="-1"/>



</androidx.constraintlayout.widget.ConstraintLayout>